<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rks.gentrexha.waiwtw.mainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/description"
        android:id="@+id/txvWelcome"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tellMeMore"
        android:id="@+id/btnMore"
        android:onClick="btnMoreOnClick"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txvWelcome"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locationHistory"
        android:id="@+id/btnHistory"
        android:onClick="btnHistoryOnClick"
        android:layout_below="@+id/btnMore"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnMore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txvLocationService"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/btnMore"
        android:layout_toEndOf="@+id/btnMore" />
</RelativeLayout>
